<article id="order">
  <h1>Order #<%= @order.id |> to_string() |> String.pad_leading(4, "0") %></h1>

  <div id="order-status">Status: <%= @order.status %></div>

  <table>
    <tbody>
      <%= for item <- @order.line_items do %>
        <tr>
          <td><%= item.product_name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.total %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div id="order-total">Total: <%= @order.total %></div>
</article>
